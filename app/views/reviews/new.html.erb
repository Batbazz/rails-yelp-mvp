<div class="container">
  <div class="row">
    <div class="col">
      <h1>Enter your review for <%= @restaurant.name %></h1>

        <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.select :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.submit %>
        <% end %>

    </div>
  </div>
</div>

