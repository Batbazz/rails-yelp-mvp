<div class="container">
  <div class="row">
    <div class="col">
      <h1>Restaurants</h1>

        <ul>
          <% @restaurants.each do |restaurant| %>
        <div>
          <li><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></li>
        </div>
        <% end %>
        </ul>
    </div>
  </div>
</div>

<%= link_to "Enter a new restaurant", new_restaurant_path(@restaurant), class: 'btn btn-primary' %>

