<h1><%= @restaurant.name %></h1>

<ul>
  <div>
    <li>Address: <%= @restaurant.address %></li>
    <li>Category: <%= @restaurant.category %></li>
    <li>Phone number: <%= @restaurant.phone_number %></li>
  </div>
</ul>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<%= link_to "Leave a review", new_restaurant_review_path(:restaurant_id => @restaurant.id), class: "btn btn-primary" %>
<%= link_to "Back to the list", restaurants_path(@restaurant) %>
