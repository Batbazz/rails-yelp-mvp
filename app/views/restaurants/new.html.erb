<div class="container">
  <div class="row">
    <div class="col">
      <h1>Enter a new restaurant</h1>

        <%= simple_form_for(@restaurant) do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :category %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>

    </div>
  </div>
</div>

<%= link_to "Back to list", restaurants_path(@restaurant) %>
